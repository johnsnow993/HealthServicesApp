# Environment Variables Template
# Copy this to .env for local development

# Database (Railway will provide these automatically)
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/healthapp
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
JWT_EXPIRATION=86400000

# Email Configuration - SendGrid API
SENDGRID_API_KEY=your-sendgrid-api-key-here
EMAIL_FROM=healthservicesbackend@gmail.com

# Frontend URLs
PATIENT_FRONTEND_URL=http://localhost:3000
DOCTOR_FRONTEND_URL=http://localhost:3001
